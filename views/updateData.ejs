      <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Form Basic</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <form class="form-horizontal" method="post" action="/admin/editAdminRecord" enctype="multipart/form-data">
                
                  <input type="hidden" name="admin_id" value="<%= singleRecord.id %>">
                  <div class="card-body">
                    <h4 class="card-title">Personal Info</h4>
                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >First Name</label>
                      <div class="col-sm-9">

                        <% var name = singleRecord.name.split(" "); %>


                        <input type="text" class="form-control"  id="fname" name="fname" placeholder="First Name Here" value="<%= name[0] %>"/>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Last Name</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control"  id="lname" name="lname" placeholder="last Name Here"  value="<%= name[1] %>"/>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Enter Email</label>
                      <div class="col-sm-9">
                        <input type="email" class="form-control"  id="email" name="email" placeholder="Enter email"  value="<%= singleRecord.email  %>"/>
                      </div>
                    </div>  

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Select Gender</label>
                      <div class="col-sm-9">
                        <input type="radio" id="radio" name="gender" value="male"<% if(singleRecord.gender=='male'){ %><%= 'checked' %> <% } %>/>Male
                        <input type="radio" id="radio" name="gender" value="female" <% if(singleRecord.gender=='female'){ %><%= 'checked' %> <% } %>/>Female
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Select Hobby</label>
                      <div class="col-sm-9">
                        <input type="checkbox" id="checkbox" name="hobby[]" value="reading" <% if(singleRecord.hobby.includes("reading")){ %> <%= 'checked' %><% } %> />Reading
                        <input type="checkbox" id="checkbox" name="hobby[]" value="music" <% if(singleRecord.hobby.includes("music")){ %> <%= 'checked' %><% } %> />Music
                        <input type="checkbox" id="checkbox" name="hobby[]" value="cycling" <% if(singleRecord.hobby.includes("cucling")){ %> <%= 'checked' %><% } %>/>Cycling
                      </div>
                    </div>

                    <% var city = ['Surat','Rajkot','vadodra']%>
                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Select city</label>
                      <div class="col-sm-9">
                          <select name="city" class="form-control">
                            <option value="">--select city--</option>
                            <% for(var i=0; i<city.length; i++){ %>
                              <option value="<%= city[i] %>" <% if(singleRecord.city==city[1]) { %> <%= 'selected' %> <% } %>>  <%= city[i] %></option>
                            <% } %>
                          </select> 
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >Enter Description</label>
                      <div class="col-sm-9">
                        <textarea  class="form-control"  id="message" name="message" ><%= singleRecord.message %></textarea>
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label" >upload Image</label>
                      <div class="col-sm-9">
                        <input type="file" name="avatar" class="form-control">
                        <img src="<%= singleRecord.avatar %>"  height="100">
                      </div>
                    </div>
                  </div>
                  <div class="border-top">
                    <div class="card-body">
                      <button type="submit" value="submit" name="submit" class="btn btn-primary">
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
             
            </div>
            
          </div>
          <!-- editor -->
         
          <!-- ============================================================== -->
          <!-- End PAge Content -->
